<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF9D73">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <ImageView
            android:id="@+id/imageViewPC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingBottom="40dp"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            android:src="@drawable/img_pc" />

        <ImageView
            android:id="@+id/imageViewTablet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="170dp"
            android:paddingTop="80dp"
            android:src="@drawable/img_tablet" />

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingBottom="30dp"
            android:paddingLeft="0dp"
            android:paddingRight="150dp"
            android:paddingTop="100dp"
            android:src="@drawable/img_smartphone" />
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerAddGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="취소"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/buttonConfirm"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="만들기"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>
